<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="vertical"
    android:id="@+id/layout_card_view">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardBackgroundColor="@color/windowBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:id="@+id/txt_card_view_title"
                android:textColor="@color/textColorPrimaryDark"
                android:textSize="24sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-condensed"
                android:text="よこそう日本語"/>
           <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:id="@+id/txt_card_view_meaning"
                android:layout_below="@id/txt_card_view_title"
                android:textColor="@color/textColorSecondaryDark"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/card_view_title_meaning"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:id="@+id/txt_card_view_content"
            android:layout_below="@id/txt_card_view_meaning"
            android:textColor="@color/textColorSecondaryDark"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:text="Test"
        />
        <Button
            android:id="@+id/btn_learn_more"
            android:background="@drawable/button_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_card_view_content"
            android:padding="8dp"
            android:text="@string/card_view_btn_learn_more"
            android:textColor="@color/textColorPrimaryDark"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>